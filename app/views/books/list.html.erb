
<link rel="stylesheet" href="http://getbootstrap.com/dist/css/bootstrap.min.css">

<h2> <font color=purple> Let's get reading! </font> </h2>


<% all_books = Book.read %>
<div class="col-md-5">
<table class="table table-bordered">
  <thead>
  <tr>
    <th> Title </th>
    <th> Author </th>
  </tr>
  </thead>
  <tbody>
<% all_books.each do |book| %>
  <tr>
    <td> <%= book["title"] %> </td>
    <td> <%= book["author"] %> </td>
  </tr>
<% end %>
</tbody>
</table>


